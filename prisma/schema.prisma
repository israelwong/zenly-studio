model studio_content_analytics {
  id        String @id @default(cuid())
  studio_id String

  // Entidad relacionada (polimórfica)
  content_type ContentType // POST | PORTFOLIO | OFFER | PACKAGE
  content_id   String // ID del post/portfolio/offer/paquete

  // Tipo de evento
  event_type AnalyticsEventType

  // Contexto del usuario
  user_id    String? // Si está autenticado
  ip_address String? // IP anónima para uniqueness
  user_agent String? // Browser/device info
  session_id String? // Para agrupar sesión

  // Contexto de origen
  referrer     String? // URL de origen
  utm_source   String?
  utm_medium   String?
  utm_campaign String?
  utm_term     String?
  utm_content  String?

  // Metadata adicional (JSON flexible)
  metadata Json? // Ej: { "media_id": "xxx", "cta_type": "whatsapp" }

  // Timestamps
  created_at DateTime @default(now())

  // Relaciones
  studio studios @relation(fields: [studio_id], references: [id], onDelete: Cascade)

  // Índices optimizados
  @@index([studio_id, content_type, content_id, event_type])
  @@index([content_type, content_id, created_at])
  @@index([studio_id, created_at])
  @@index([event_type, created_at])
  @@index([session_id])
}

